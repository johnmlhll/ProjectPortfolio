<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<meta name="description" content="Software Portolio MVC Web App showing the Portfolio of John Mulhall"/>
	<meta name="keywords" content="software, development, csharp, asp.net, java, writing, html5, css3, javascript, mvc, databases, postgresql, mysql, sqlserver, frameworks, technology, azure, oop"/>
	<meta name="author" content="John Mulhall"/>	
    <title>@ViewBag.Title - Software Portfolio</title>	
    <!--Favicon-->
    <link rel="shortcut icon" href="~/Images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Images/favicon.ico" type="image/x-icon">   
	<!--CSS/JS Files-->	
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="~/Scripts/JSSFile.js" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="~/Content/Style.css"/>    	
</head>
<body>		
    <div id="wrapper">  
		<!--Header-->
		<header>
            <h1><sup>Scientia Est</sup></h1>
		    <h1>Software Portolio John Mulhall</h1>	
			<a id="github_profile" href="https://github.com/johnmlhll" target="_blank">
				<img src="~/Images/imgGithubProfile.png" alt="image of GitHub with link to profile"/>
			</a>	
        </header>
		<!--Navbar-->	
		<div id="nav_wrapper"> 	
            <div id="navbar_tab" onclick="openNav()"> <h3>Menu</h3></div>
			<div id="nav">	
    			<!--Restricted Navbar > 768px-->	
        	    <nav id="unrestricted_nav">	
                    <ul>
                        <li><a>@Html.ActionLink("Home", "Index", "Home")</a></li>
        	            <li><a>@Html.ActionLink("About John", "Index", "About")</a></li>
        			    <li><a>@Html.ActionLink("Resume","Index","Resume")</a></li>
        			    <li><a>@Html.ActionLink("Irish Tech News","Index","IrishTechNews")</a></li>
        			    <li><a>@Html.ActionLink("Contact John","Index","Contact")</a></li>	
                    </ul>
        	    <a href="javascript:void(0)" class="btn_close" onclick="closeNav()"><p>Close Menu</p></a>
                </nav>	
    		    <!--Restricted Navbar < 768px-->
                <nav id="restricted_nav">  
                    <ul>
                        <li><a>@Html.ActionLink("Home", "Index", "Home")</a></li>
                        <li><a>@Html.ActionLink("About", "Index", "About")</a></li>
                        <li><a>@Html.ActionLink("Resume","Index","Resume")</a></li>
                        <li><a>@Html.ActionLink("ITN Writing","Index","IrishTechNews")</a></li>
                        <li><a>@Html.ActionLink("Contact","Index","Contact")</a></li>  
                    </ul>
                <a href="javascript:void(0)" class="btn_close" onclick="closeNav()"><p>Close Menu</p></a>
                </nav>  
			</div>		
        </div>	
		<!--Main Body/Views-->	
        <main>
		    @RenderBody()
		</main>
		<!--Footer-->
		<footer>
			<hr>
			<!--Left hand side of footer-->
		    <a id="logo"><img src="~/Images/imgMulhallFamilyCrest.png" alt="Image of the Mulhall Family Crest"/></a>
		    <ul id="footer_shares_linkedin">
			    <li>
                    <a href="https://plus.google.com/share?url=https://jmulhall.azurewebsites.net/@ViewBag.Title" target="_blank">
                        <img src="~/Images/imgShareGooglePlus.png" alt="Image of the Google plus share icon"/>
                    </a> 
                </li>
                <li>
                    <a>
						<script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
                        <script type="IN/Share" data-url="https://jmulhall.azurewebsites.net"></script>
					</a> 
				</li>
            </ul>  
			<!--Center of footer-->
            <ul id="footer_contact_details">
			    <li><a><strong>Email:</strong>  johnmlhll@yahoo.com</a></li>
				<li><a><strong>Mobile:</strong> +353 (0) 86 231 7352</a></li>
				<li>
					<a href="https://twitter.com/johnmlhll" target="_blank">
						<img src="~/Images/imgConnectTwitter.png" alt="Twitter Profile Link of John Mulhall"/>
					</a>
				    <a href="https://www.linkedin.com/in/johnmlhll/" target="_blank">
						<img src="~/Images/imgConnectLinkedIn.png" alt="LinkedIn Profile Link of John Mulhall"/>
					</a>
				</li>
			</ul>
			<!--Right Hand Side of footer-->
			<div id="twitter_container">	
    			<ul id="footer_shares_twitter">
    				<li>
    					<a href="http://www.Twitter.com/share" data-count="vertical" target="_blank">
    						<img src="~/Images/imgShareTwitter.png" alt="Image of Twitter Share Icon for Page"/>
    					</a>
    				</li>
    				<li>
    					<a href="http://www.Facebook.com/sharer.php?u=https://jmulhall.azurewebsites.net/@ViewBag.Title" target="_blank">
    						<img src="~/Images/imgShareFacebook.png" alt="Image of Facebook Share Icon for Page"/>
    					</a>
    				</li>
    			</ul>
			</div>
			<div id="copyright"><sub>&copy; John Mulhall 2017</sub></div>	
		</footer>
	</div>
</body>
</html>
